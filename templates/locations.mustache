<!DOCTYPE html>
<html>
	<head>
		<title>Locations | {{companyName}}</title>

		<!-- ===============
			Page Head Info
		================ -->		

		{{> head}}

		<meta name="description" content="{{companyName}}">

		<!-- ===============
			END Page Head Info
		================ -->

	</head>

	<body>

		<!-- ===============
			Page Header
		================ -->

		{{> header}}

		<!-- ===============
			END Page Header
		================ -->

		<div style="margin-top: 135px; position: relative;">
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img class="first-slide d-block w-100" src="./images/headerLocations_1600x267test.jpg" alt="First slide">
				</div>
			</div>
		</div>

		<div class="container" style="padding-top: 3rem; padding-bottom: 3rem;">
			<h3 class="display-4" style="margin-bottom: 20px;">Locations</h3>
			<p style="margin-top: 2rem; font-size: 1.25rem; ">{{locationsText}}</p>
			
			<div class="row" style="align-items: center; padding-top: 1rem;">

				<div class="col-md-6" style="padding-bottom: 1.5rem;">
					<div class="card">
						<div id="map1" style="width: 100%; height: 383px;"></div>
						<div class="card-body text-center">
							<h4 class="card-title">London West</h4>
							<p class="card-text">Wonderland Road North & Riverside Drive</p>
						</div>
					</div>
				</div>
				<div class="col-md-6" style="padding-bottom: 1.5rem;">
					<div class="card">
						<div id="map2" style="width: 100%; height: 383px;"></div>
						<div class="card-body text-center">
							<h4 class="card-title">London East</h4>
							<p class="card-text">Commissioners Road East & Highbury Avenue North</p>
						</div>
					</div>
				</div>
			</div>
			<div class="row justify-content-center" style="margin-top: 20px;">
				<a href="contact.html" class="btn btn-primary" style="padding-left: 50px; padding-right: 50px;">Request Appointment</a>
			</div>
		</div>
		
		<!-- ===============
		   Page Footer
		================ -->

		{{> footer}}

		<!-- ===============
		   END Page Footer
		================ -->

		<!-- ===============
		   Page Script Info
		================ -->

		{{> script}}
		<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA-iyiHGz9rgXiJ101FI3iyjcu-0rHHmZc&callback=myMap" type="text/javascript"></script>

		<script type="text/javascript">
			function myMap() {

				var myLatLng1 = {lat: 42.976455, lng: -81.290103};
				var myLatLng2 = {lat: 42.963412, lng: -81.190690};

			    // var mapOptions(myLatLng) = {
			    //     center: new google.maps.LatLng(myLatLng),
			    //     zoom: 15,
			    //     mapTypeId: google.maps.MapTypeId.ROADMAP
			    // }
				var map1 = new google.maps.Map(document.getElementById("map1"), {
					center: myLatLng1,
					zoom: 15,
					mapTypeId: google.maps.MapTypeId.ROADMAP					
					});

				var map2 = new google.maps.Map(document.getElementById("map2"), {
					center: myLatLng2,
					zoom: 15,
					mapTypeId: google.maps.MapTypeId.ROADMAP					
					});
				
				var marker1 = new google.maps.Marker({
					position: myLatLng1,
					map: map1,
					title: 'London West Location'
				});

				var marker2 = new google.maps.Marker({
					position: myLatLng2,
					map: map2,
					title: 'London West Location'
				});
			}
		</script>

		<!-- ===============
		   END Page Script Info
		================ -->
	
	</body>
</html>
