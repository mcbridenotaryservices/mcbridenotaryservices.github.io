<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<title>Locations | {{companyName}}</title>

		<!-- ===============
			Page Head Info
		================ -->		

		{{> head}}

		<meta name="description" content="{{companyName}}">
		<meta name="author" content="{{ownerName}}">

		<!-- ===============
			END Page Head Info
		================ -->

	</head>

	<body>

		<!-- ===============
			Page Header
		================ -->

		{{> header}}

		<!-- ===============
			END Page Header
		================ -->

		<div id="myCarousel" class="carousel slide" data-ride="carousel" style="margin-top: 97px;">
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img class="first-slide d-block w-100" src="./images/Header2_1900x500.png" alt="First slide">
				<!--             ref: https://www.pexels.com -->
				</div>
			</div>
		</div>

		<div class="container" style="padding-top: 3rem; padding-bottom: 3rem;">
			<h3 class="display-4" style="margin-bottom: 20px;">Locations</h3>
			<p style="margin-top: 2rem; font-size: 1.25rem; ">In addition to our two convenient locations, McBride Notary Services also offers mobile notary services.  Please <a href="contact.html">contact us</a> for more information.</p>
			{{locationsText}}
			<div class="row" style="align-items: center; padding-top: 1rem;">

				<div class="col-md-6" style="padding-bottom: 1.5rem;">
					<div class="card">
						<div id="map1" style="width: 100%; height: 383px;"></div>
						<div class="card-body text-center">
							<h4 class="card-title">London West</h4>
							<p class="card-text">Wonderland Road North & Riverside Drive</p>
							<a href="contact.html" class="btn btn-primary">Request Appointment</a>
						</div>
					</div>
				</div>
				<div class="col-md-6" style="padding-bottom: 1.5rem;">
					<div class="card">
						<div id="map2" style="width: 100%; height: 383px;"></div>
						<div class="card-body text-center">
							<h4 class="card-title">London East</h4>
							<p class="card-text">Commissioners Road East & Highbury Avenue North</p>
							<a href="contact.html" class="btn btn-primary">Request Appointment</a>
						</div>
					</div>
				</div>

			</div>
		</div>
		
		<!-- ===============
		   Page Footer
		================ -->

		{{> footer}}

		<!-- ===============
		   END Page Footer
		================ -->

		<!-- ===============
		   Page Script Info
		================ -->

		{{> script}}
		<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDsWf36ju-hfX7_5ddPLL_sstioL8mkHHk&callback=myMap" type="text/javascript"></script>

		<script type="text/javascript">
			function myMap() {

				var myLatLng1 = {lat: 42.976455, lng: -81.290103};
				var myLatLng2 = {lat: 42.963412, lng: -81.190690};

			    // var mapOptions(myLatLng) = {
			    //     center: new google.maps.LatLng(myLatLng),
			    //     zoom: 15,
			    //     mapTypeId: google.maps.MapTypeId.ROADMAP
			    // }
				var map1 = new google.maps.Map(document.getElementById("map1"), {
					center: myLatLng1,
					zoom: 15,
					mapTypeId: google.maps.MapTypeId.ROADMAP					
					});

				var map2 = new google.maps.Map(document.getElementById("map2"), {
					center: myLatLng2,
					zoom: 15,
					mapTypeId: google.maps.MapTypeId.ROADMAP					
					});
				
				var marker1 = new google.maps.Marker({
					position: myLatLng1,
					map: map1,
					title: 'London West Location'
				});

				var marker2 = new google.maps.Marker({
					position: myLatLng2,
					map: map2,
					title: 'London West Location'
				});
			}
		</script>

		<!-- ===============
		   END Page Script Info
		================ -->
	
	</body>
</html>
